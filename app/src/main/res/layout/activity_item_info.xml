<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pre_disposal_instruction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pre_disposal_box_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@drawable/bin_item_box"
        android:elevation="@dimen/item_box_elevation">

        <TextView
            android:id="@+id/pre_disposal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/pre_disposal_instruction"
            android:layout_marginTop="@dimen/text_in_box_margin"
            android:layout_marginStart="@dimen/text_in_box_margin"
            />

        <ImageView
            android:id="@+id/pre_disposal_icon"
            android:layout_width="@dimen/pre_disposal_icon_width"
            android:layout_height="@dimen/pre_disposal_icon_width"
            app:layout_constraintStart_toStartOf="@id/pre_disposal_title"
            app:layout_constraintTop_toBottomOf="@id/pre_disposal_title"
            android:layout_marginTop="@dimen/text_in_box_margin"
            tools:src="@drawable/ic_bin_rubbish"/>

        <TextView
            android:id="@+id/pre_disposal_instruction_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/pre_disposal_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/pre_disposal_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/text_in_box_margin"
            tools:text="Some texts describing item's pre-disposal instructions if any"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/pre_disposal_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bin_item_box"
        android:elevation="@dimen/item_box_elevation">

        <TextView
            android:id="@+id/refuse_recycling_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/text_in_box_margin"
            android:layout_marginStart="@dimen/text_in_box_margin"
            android:text="@string/refuse_and_recycling_centers"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginHorizontal="@dimen/text_in_box_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refuse_recycling_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>